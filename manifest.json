{
  "manifest_version": 3,
  "name": "Instagram Audio Downloader",
  "version": "1.0.0",
  "description": "Download and save Instagram audio messages from direct messages",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://www.instagram.com/*",
    "*://www.messenger.com/*",
    "*://cdn.fbsbx.com/*",
    "*://*.fbcdn.net/*",
    "*://*.cdninstagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.instagram.com/*",
        "*://www.messenger.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instagram Audio Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}